<form class="form-horizontal" {{action "signup" on="submit"}} autocomplete="on">
        <div class="form-group">
          {{input class="form-control" type="text" value=name size="25" placeholder="Name"
           required="required" autofocus="autofocus"}}
        </div>

        <div class="form-group">
            {{input class="form-control" type="email"  value=email size="25" placeholder="Email"
              required="required"}}
        </div>

        <div class="form-group">
            {{input class="form-control" type="password" value=password size="25"
              placeholder="Password" required="required" }}
        </div>

        <div class="form-group">
            {{input class="form-control" type="password" value=passwordConfirmation size="25"
              placeholder="Confirm Password" required="required" }}
        </div>

        <button class="btn btn-primary" id="signup" type="submit" {{action 'signup' on="click"}}>Sign up</button>

</form>